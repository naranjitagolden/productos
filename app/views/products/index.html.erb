<h1>Bienvenido a Productos</h1>

<%= link_to 'Nuevo Producto', new_product_path %>


<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Published</th>
    <th colspan="5"></th>
  </tr>
 
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.description %></td>
      <td><%= product.price %></td>
      <td><%= product.published %></td>
      <td><%= link_to 'Show', product_path(product) %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= link_to 'Destroy', product_path(product),
      		  method: :delete,
      		  data: { confirm: 'Estas seguro?'} %></td>
    </tr>
  <% end %>
</table>
